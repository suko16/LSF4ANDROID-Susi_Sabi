<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/basic_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grunddaten"
        android:textSize="@dimen/homescreen_button_text"
        android:background="@color/color_lsf4Android"
        android:textColor="@color/text_white"
        android:padding="@dimen/padding_medium"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp" />
    <Button
        android:id="@+id/termine_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/termine"
        android:textSize="@dimen/homescreen_button_text"
        android:background="@color/color_lsf4Android"
        android:textColor="@color/text_white"
        android:padding="@dimen/padding_medium"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/basic_data_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/content_button"
        android:layout_marginRight="0dp"
        app:layout_constraintVertical_bias="0.504"
        app:layout_constraintRight_toRightOf="@+id/basic_data_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/basic_data_button"
        app:layout_constraintHorizontal_bias="0.0" />
    <Button
        android:id="@+id/content_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inhalt"
        android:textSize="@dimen/homescreen_button_text"
        android:background="@color/color_lsf4Android"
        android:textColor="@color/text_white"
        android:padding="@dimen/margin_medium"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/basic_data_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/basic_data_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/basic_data_button"
        app:layout_constraintHorizontal_bias="0.46" />
</android.support.constraint.ConstraintLayout>


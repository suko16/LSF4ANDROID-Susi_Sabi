<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearBaum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/course_listing_vst_Nr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_x_large"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/margin_large"/>
                <TextView
                    android:id="@+id/course_listing_title"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_x_large"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/margin_large"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"/>
        </LinearLayout>
        <ListView
            android:id="@+id/course_listing_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_lsf4Android_opaque"
            android:dividerHeight="@dimen/divider_hight">
        </ListView>
</LinearLayout>


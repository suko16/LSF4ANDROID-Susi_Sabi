<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/single_view_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/text_large"
        android:padding="@dimen/text_large"
        android:textStyle="bold"
        android:background="@color/color_lsf4Android"
        android:textColor="@color/text_white" />
    <ListView
        android:id="@+id/single_view_fragment_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/divider_hight"
        android:divider="@color/color_lsf4Android_opaque"
        android:layout_marginTop="@dimen/margin_x_x_large">
    </ListView>
</LinearLayout>


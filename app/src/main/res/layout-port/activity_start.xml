<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingTop="20dp"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/uni_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:src="@mipmap/uni_logo"/>

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:padding="30dp"
        android:paddingBottom="60dp"
        android:text="LSF4Android"
        android:textSize="40dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/ausfallende_v_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="15dp"
        android:background="#1F4C8E"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Ausfallende Veranstaltungen"/>

    <Button
        android:id="@+id/eigene_v_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="15dp"
        android:background="#1F4C8E"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Eigene Veranstaltungen"
        />

    <Button
        android:id="@+id/alle_v_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="15dp"
        android:background="#1F4C8E"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:text="Alle Veranstaltungen"/>

    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ur.mi.lsf4android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- TODO: labels in Strings -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/uni_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <service android:name=".BackgroundService" />

        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ur.mi.lsf4android.StartActivity" />
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="Detailansicht">

        </activity>

        <activity
            android:name=".CreateNotificationActivity"
            android:label="CreateNotificationActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ur.mi.lsf4android.MainActivity" />
        </activity>
        <activity
            android:name=".NotificationReceiverActivity"
            android:label="NotificationReceiverActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".CreateNotificationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.ur.mi.lsf4android.CreateNotificationActivity" />
                <!--launchMode?!-->
        </activity>
        <activity
            android:name=".BaumActivity"
            android:label="Vorlesungsverzeichnis" />
        <activity
            android:name=".BaumLetzteActivity"
            android:label="Vorlesungsverzeichnis" />
        <activity
            android:name=".AusfallendeActivity"
            android:label="Ausfallende Veranstaltungen">
        </activity>
        <activity
            android:name=".DetailActivityWithFragments"
            android:label="DetailActivityWithFragments">
        </activity>
    </application>

</manifest>

